{
    "comment" : "This file is managed by Puppet.  Do not edit!",

    "imports" : [
        {
            "filename" : "/opt/landesk/etc/landesk.conf",
            "type" : "keyvalue"
        }
    ],

    "taskTimeoutInSeconds" : 3800,
    "privilegeEscalationAllowed" : <%= @privilegeescalationallowed %>,
    "cacheDirectory" : "/opt/landesk/cache/policy",
    "jobDirectory" : "/opt/landesk/cache/jobs",

    "logging" : {
        "level" : "Info",
        "streams" : [
            {
                "name" : "/opt/landesk/log/policy.log",
                "maxSizeInMB" : 50,
                "numberToKeep" : 3
            }
        ]
    },

    "commands" : [
        {
            "path" : "/opt/landesk/bin/software_distribution",
            "timeoutInSeconds" : 960
        },
        {
            "path" : "/opt/landesk/bin/vulnerability",
            "timeoutInSeconds" : 3600
        },
        {
            "path" : "/opt/landesk/bin/agent_settings",
            "timeoutInSeconds" : 900
        },
        {
            "path" : "/opt/landesk/bin/proxyhost"
        },
        {
            "path" : "/usr/bin/timeout --signal=KILL"
        }
    ],

    "modules" : [
        "libEngPolicy",
        "libPolicy",
        "libScript",
        "libComms"
    ],

    "options" : [
        {
            "short" : "l",
            "long" : "logfile",
            "description" : "Log filename",
            "type" : "arg",
            "argType" : "FILENAME"
        },
        {
            "short" : "h",
            "long" : "help",
            "description" : "Displays help",
            "type" : "noarg"
        },
        {
            "short" : "c",
            "long" : "config",
            "description" : "Configuration file",
            "type" : "arg",
            "argType" : "FILENAME"
        },
        {
            "long" : "console",
            "description" : "Console fully qualified domain name or IP",
            "type" : "arg",
            "argType" : "FQDN/IP"
        },
        {
            "long" : "exclude",
            "description" : "Exclude policy types from running: SWD, Patch, Reboot, ChangeSetting",
            "type" : "arg",
            "argType" : "EXCLUDE_LIST"
        },
        {
            "short" : "t",
            "long" : "taskId",
            "description" : "Task ID of the policy to run",
            "type" : "arg",
            "argType" : "TASKID"
        },
        {
            "short" : "v",
            "long" : "version",
            "description" : "Display application version and build date",
            "type" : "noarg"
        },
        {
            "short" : "V",
            "long" : "verbose",
            "description" : "Turn on debug level output.",
            "type" : "noarg"
        }
    ]
}

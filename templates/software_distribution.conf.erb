{
    "imports" : [
        {
            "filename" : "/opt/landesk/etc/landesk.conf",
            "type" : "keyvalue"
        }
    ],

    "taskTimeoutInSeconds" : 900,
    "privilegeEscalationAllowed" : <%= @privilegeescalationallowed %>,
    "cacheDirectory" : "/opt/landesk/cache/software_distribution",
    "cacheExpirationInDays" : 14,
    "cacheMaxSizeInMB" : 100,

    "logging" : {
        "level" : "Info",
        "streams" : [
            {
                "name" : "/opt/landesk/log/software_distribution.log",
                "maxSizeInMB" : 50,
                "numberToKeep" : 3
            }
        ]
    },

    "commands" : [
        {
            "path" : "/usr/bin/timeout --signal=KILL"
        },
        {
            "path" : "/opt/landesk/bin/proxyhost"
        }
    ],

    "modules" : [
        "libEngSoftwareDistribution",
        "libScript",
        "libSoftwareDistribution"
    ],

    "options" : [
        {
            "short" : "l",
            "long" : "logfile",
            "description" : "Log filename",
            "type" : "arg",
            "argType" : "FILENAME"
        },
        {
            "short" : "h",
            "long" : "help",
            "description" : "Displays help",
            "type" : "noarg"
        },
        {
            "short" : "c",
            "long" : "config",
            "description" : "Configuration file",
            "type" : "arg",
            "argType" : "FILENAME"
        },
        {
            "long" : "console",
            "description" : "Console's fully qualified domain name",
            "type" : "arg",
            "argType" : "FQDN/IP"
        },
        {
            "short" : "p",
            "long" : "packageId",
            "description" : "Package ID to use for fetching package information.",
            "type" : "arg",
            "argType" : "PACKAGE_ID"
        },
        {
            "short" : "t",
            "long" : "taskId",
            "description" : "Task ID to use for fetching package information and tracking scheduled jobs.",
            "type" : "arg",
            "argType" : "TASK_ID"
        },
        {
            "long" : "timeout",
            "description" : "Number of seconds to use for max process run duration.",
            "type" : "arg",
            "argType" : "TIMEOUT"
        },
        {
            "short" : "v",
            "long" : "version",
            "description" : "Display application version and build date",
            "type" : "noarg"
        },
        {
            "short" : "V",
            "long" : "verbose",
            "description" : "Turn on debug level output.",
            "type" : "noarg"
        }
    ]
}
